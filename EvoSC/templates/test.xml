<?xml version="1.0" encoding="UTF-8" ?>
<?component tag="Window" src="components/window.xml" ?>
<?component tag="Button" src="components/button.xml" ?>
<?component tag="BasicButton" src="components/basicbutton.xml" ?>
<?component tag="ConfirmButton" src="components/confirmbtn.xml" ?>
<?component tag="Checkbox" src="components/checkbox.xml" ?>
<?component tag="Input" src="components/input.xml" ?>
<?component tag="ToggleInput" src="components/toggleinput.xml" ?>
<?component tag="MaskedInput" src="components/maskedinput.xml" ?>
<?component tag="Dropdown" src="components/dropdown.xml" ?>

<manialink id="{{name}}" name="EvoSC:{{name}}" version="3">
    <stylesheet>
        <style class="success" focusareacolor1="050" focusareacolor2="070" colorize="0d0"/>
        <style class="danger" focusareacolor1="500" focusareacolor2="700" colorize="d00"/>
        <style class="info" focusareacolor1="055" focusareacolor2="077" colorize="0dd"/>
        <style class="warning" focusareacolor1="550" focusareacolor2="770" colorize="dd0"/>
        <style class="transparent" focusareacolor1="0000" focusareacolor2="555a" colorize="fff0"/>
        <style class="closeButton" focusareacolor1="0000" focusareacolor2="d00"/>
        <style class="textButton" textsize="1" focusareacolor1="0000" focusareacolor2="777a"/>
        <!-- element styles -->

        <style class="uiButtonElement" focusareacolor1="{{colors.accent_dark}}" focusareacolor2="{{colors.accent}}" textcolor="fff" textsize="1.2"/>
        <style class="uiButtonOutline" focusareacolor1="0000" focusareacolor2="{{colors.accent}}" textcolor="fff" textsize="1.2"/>
        <style class="uiConfirmButtonElement" focusareacolor2="{{colors.accent}}" textcolor="fff" textsize="1.2"/>
        <style class="uiSelectElement" focusareacolor1="000" focusareacolor2="222" textsize="1"/>
        <style class="uiCheckboxElement" focusareacolor1="0000" focusareacolor2="0000" textsize="0.9"/>
        <style class="uiCheck" focusareacolor1="0000" focusareacolor2="0000" textcolor="{{colors.accent}}" textsize="2"/>
        <style class="uiMaskedToggle" focusareacolor1="0000" focusareacolor2="0000" textcolor="fff" textsize="1.2"/>
        <style class="uiEntry" focusareacolor1="0000" focusareacolor2="0000" textcolor="fff" textsize="1.2"
               z-index="2"/>
        <style class="uiScrollbar" bgcolor="fffa" bgcolorfocus="ffff"/>
        
    </stylesheet>
    <Window id="{{id}}" title="{{title}}" size="{{size}}" pos="{{pos}}">
        <frame scale="0.6" pos="0 0">
            <label text="The quick brown fox jumps over the lazy dog." textfont="Arial" pos="0 0"/>
            <label text="The quick brown fox jumps over the lazy dog." textfont="RajdhaniMono" pos="0 -6"/>
            <label text="The quick brown fox jumps over the lazy dog." textfont="GameFontRegular" pos="0 -12"/>
            <label text="The quick brown fox jumps over the lazy dog." textfont="GameFontSemiBold" pos="0 -18"/>
            <label text="The quick brown fox jumps over the lazy dog." textfont="GameFontExtraBold" pos="0 -24"/>
            <label text="The quick brown fox jumps over the lazy dog." textfont="GameFontBlack" pos="0 -30"/>
            <label text="The quick brown fox jumps over the lazy dog." textfont="Oswald" pos="0 -36"/>
            <label text="The quick brown fox jumps over the lazy dog." textfont="RobotoCondensed" pos="0 -42"/>
        </frame>
        
        <Input text="input field" pos="10 -30" width="40"/>
        <MaskedInput text="masked input" pos="10 -36" width="40"/>
        <ToggleInput text="toggle input" pos="10 -42" width="40"/>


        <Checkbox text="Group 1" pos="90 -30" test="check" name="name" checked="1" disabled="0" group="grp1"/>
        <Checkbox text="Group 2 " pos="90 -24" test="check" name="name" checked="0" disabled="0" group="grp1"/>
        <Checkbox text="Group 3" pos="90 -18" test="check" name="name" checked="0" disabled="0" group="grp1"/>
        <!-- -->

        <Checkbox text="Checkbox" pos="60 -30" test="check" name="name" checked="1" disabled="0"/>

        <!-- dropdowns -->
        <Dropdown pos="68 0" name="dd_1" width="30" items="{{items}}"/>
        <Dropdown pos="100 0" name="dd_1" width="20" items="asd|das|kekek"/>
        <!--buttons-->
        
        <ConfirmButton text="Ok" pos="30 -50" width="24" action="{{closeaction}}"/>
        <Button text="Cancel" pos="60 -50" width="24"/>
        <BasicButton text="Close" pos="90 -50" size="24 6"/>
        
    </Window>
</manialink>
