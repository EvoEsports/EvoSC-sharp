<?xml version="1.0" encoding="UTF-8"?>
<manialink version="3">
    {{ arr = pos|string.split " " }}
    {{ div = arr|array.last|string.to_double }}
    {{ wnum = width|string.to_float }}
    {{ height = 6 }}

    <frame pos="{{arr|array.first|string.to_float + (wnum / 2)}} {{arr|array.last|string.to_float - (height/2)}}" class="uiContainer uiBasicButton">
		<label size="{{width}} 6" text="{{text}}" class="{{type}} uiButtonElement" halign="center"
		valign="center" scriptevents="1" translate="0" textsize="1.2" action="{{action}}" textfont="GameFontSemiBold"/>
	</frame>

	<script><!--		
		***OnMouseOver***
		***
		if (Event.Control.Parent.HasClass("uiBasicButton")) {
			(Event.Control.Parent as CMlFrame).RelativeScale=1.;
		}
		***

		***OnMouseOut***
		***
		if (Event.Control.Parent.HasClass("uiBasicButton")) {
			(Event.Control.Parent as CMlFrame).RelativeScale=1.;
		}
		***
	--></script>
</manialink>